{
  "name": "npm-automation-env",
  "version": "1.0.9",
  "description": "",
  "main": "index.js",
  "watch": {
    "validate-html": {
      "patterns": [
        "src"
      ],
      "extensions": "html",
      "quiet": true,
      "legacyWatch": true
    },
    "validate-css": "src/styles.css",
    "jshint": "src/"
  },
  "scripts": {
    "server": "live-server build",
    "validate-html": "html-validate src",
    "validate-css": "css-validator src/styles.css",
    "jshint": "jshint src/",
    "watch": "npm-watch",
    "dev-mode": "npm-run-all --parallel server watch",
    "postinstall": "npm i -g live-server css-validator html-validate jshint",
    "build": "webpack",
    "build-and-validate": "npm-run-all --parallel validate-css  jshint build"
  },
  "author": "Kalagin Ivan",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.7.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "html-loader": "^0.5.5",
    "html-replace-webpack-plugin": "^2.5.6",
    "html-webpack-plugin": "^3.2.0",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "postcss-loader": "^3.0.0",
    "style-loader": "^1.0.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {}
}